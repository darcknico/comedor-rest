{
    "name": "darcknico/comedor-rest",
    "description": "Parte REST de la aplicacion del comedor",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/darcknico/comedor-rest",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1",
        "sofa/eloquence": "~5.1",
        "slim/twig-view": "^2.2",
        "davidepastore/slim-validation": "^0.5.0",
        "chadicus/slim-oauth2": "^3.1",
        "guzzlehttp/guzzle": "^6.3",
        "zircote/swagger-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
    	"psr-4": {
    		"App\\": "app"
    	}
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
